{
  "source_database_url": "postgresql://username:password@host:5432/postgres",
  "target_database_url": "postgresql://username:password@host:5432/postgres",
  "local_backup_dir": "./backups",
  "temp_dump_root": "./temp_backups",
  "archive_file_path_for_restore": "./backups/latest_backup.tar.gz",
  
  // OLD FORMAT: Simple array of database names (backward compatible)
  // "database_list": ["hotelrule_prod", "analytics_db"],
  
  // NEW FORMAT: Mapping for database renaming during restore
  // Format: {"source_database_name": "target_database_name"}
  "database_list": {
    "hotelrule_prod": "hotelrule_prod_dev",
    "analytics_db": "analytics_staging",
    "users_db": "users_test"
  },
  
  "restore_options": {
    "drop_target_database_if_exists": true,
    "create_target_database_if_not_exists": true
  },
  
  "s3_storage": {
    "bucket_name": "your-backup-bucket",
    "region": "us-east-1",
    "access_key_id": "YOUR_ACCESS_KEY",
    "secret_access_key": "YOUR_SECRET_KEY",
    "endpoint_url": "https://s3.amazonaws.com",
    "folder_prefix": "database_backups/"
  }
}